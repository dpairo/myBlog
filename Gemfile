# Plugins oficiales
group :jekyll_plugins do
  gem "base64"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "jekyll-redirect-from"
  gem "jekyll-archives"
  gem "jekyll-tagging"        # ← aquí
  gem "jekyll-include-cache"
end

# Dependencias estándar que Ruby 3.4 ya no trae
