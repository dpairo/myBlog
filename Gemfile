source "https://rubygems.org"

# Usa Jekyll 4.x
gem "jekyll", "~> 4.3"

group :jekyll_plugins do
  # Tema remoto
  gem "jekyll-remote-theme"
  # Plugins que usas
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "jekyll-redirect-from"
  gem "jekyll-archives"
  gem "jekyll-include-cache"
end

# Otras (logger, csv, etc.) si las necesitas:
gem "csv"
gem "logger"